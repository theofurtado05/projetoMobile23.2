<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0098a6"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="149dp"
        android:layout_height="145dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/log" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="309dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/redondo"
        android:ems="13"
        android:fontFamily="@font/inter_semibold"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="9dp"
        android:textColor="#2D2F31"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/botao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.401" />

    <EditText
        android:id="@+id/senhaEditText"
        android:layout_width="309dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/redondo"
        android:ems="13"
        android:fontFamily="@font/inter_semibold"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="9dp"
        android:textColor="#74777A"
        app:layout_constraintBottom_toTopOf="@+id/botao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

    <TextView
        android:id="@+id/mostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#61BFD4"
        app:layout_constraintBottom_toBottomOf="@+id/senhaEditText"
        app:layout_constraintEnd_toEndOf="@+id/senhaEditText"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="@+id/senhaEditText"
        app:layout_constraintTop_toTopOf="@+id/senhaEditText"
        app:layout_constraintVertical_bias="0.555" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="297dp"
        android:layout_height="57dp"
        android:backgroundTint="#61BFD4"
        android:background="@drawable/redondo"
        android:text="Login"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.46" />



    <TextView
        android:id="@+id/redefinir_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Esqueceu a senha"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao"
        app:layout_constraintVertical_bias="0.564"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registre-se"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:layout_constraintVertical_bias="0.276" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:buttonTint="@color/white"
        android:fontFamily="@font/inter_semibold"
        android:text="Lembrar"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        app:buttonIcon="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/registro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check" />

</androidx.constraintlayout.widget.ConstraintLayout>