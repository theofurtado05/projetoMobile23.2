<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0098a6"
    android:backgroundTint="#0098a6"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="149dp"
        android:layout_height="145dp"
        app:srcCompat="@drawable/log"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="61dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/redondo"
        android:ems="13"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="9dp"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="274dp" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="274dp"
        android:layout_height="46dp"
        android:background="@drawable/redondo"
        android:ems="13"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/botao"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:backgroundTint="#61BFD4"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="404dp" />

    <TextView
        android:id="@+id/mostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar"
        android:textColor="#61BFD4"
        app:layout_constraintBottom_toBottomOf="@+id/senha"
        app:layout_constraintTop_toTopOf="@+id/senha"
        tools:layout_editor_absoluteX="280dp" />


    <TextView
        android:id="@+id/redefinir_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu a senha"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registre-se"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="509dp" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:text="Lembrar"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro"
        tools:layout_editor_absoluteX="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>